---
export interface Props {
  title: string;
  variant?: 'line' | 'filled' | 'gradient';
  className?: string;
}

const {
  title,
  variant = 'line',
  className = "",
} = Astro.props;

const headerClass = `page-header page-header--${variant} ${className}`;
---

<header class={headerClass}>
  <div class="container">
    <h1 class="page-title">{title}</h1>
  </div>
</header>

<style>
  .page-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-sticky);
    transition: all var(--transition-base);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* === LINE VARIANT (default) === */
  .page-header--line {
    background: var(--color-background);
    border-bottom: 1px solid var(--color-primary);
  }

  .page-header--line .page-title {
    color: var(--color-primary);
  }

  /* === FILLED VARIANT === */
  .page-header--filled {
    background: var(--color-primary);
    border-bottom: none;
  }

  .page-header--filled .page-title {
    color: var(--color-white);
  }

  /* === GRADIENT VARIANT === */
  .page-header--gradient {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary), var(--color-accent1));
    border-bottom: none;
  }

  .page-header--gradient .page-title {
    color: var(--color-white);
  }

  /* Desktop - half thickness, larger font */
  .page-header {
    padding: var(--space-lg) 0;
    min-height: 60px;
  }

  .page-title {
    /* Display 1 thin elegant hero styling - larger on desktop */
    font-family: var(--font-header);
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-thin);
    line-height: var(--line-height-tight);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin: 0;
    text-align: left;
  }

  /* Tablet - thinner header, center aligned */
  @media (max-width: 1024px) {
    .page-header {
      padding: var(--space-md) 0;
      min-height: 50px;
    }

    .page-title {
      font-size: var(--font-size-3xl);
      letter-spacing: 0.12em;
      text-align: center;
    }
  }

  /* Mobile - thinner header, center aligned */
  @media (max-width: 768px) {
    .page-header {
      padding: var(--space-sm) 0;
      min-height: 45px;
    }

    .page-title {
      font-size: var(--font-size-2xl);
      letter-spacing: 0.1em;
      text-align: center;
    }
  }

  /* Dark mode compatibility */
  html.darkmode .page-header--line {
    background: var(--theme-surface);
    border-bottom-color: var(--color-primary);
  }

  html.darkmode .page-header--filled {
    background: var(--color-primary);
  }

  html.darkmode .page-header--gradient {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary), var(--color-accent1));
  }

  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .page-header {
      transition: none;
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .page-header {
      border-bottom-width: 2px;
    }
  }

  /* Brand variation classes */
  .page-header--accent1 .page-title {
    color: var(--color-accent1);
    border-bottom-color: var(--color-accent1);
  }

  .page-header--accent2 .page-title {
    color: var(--color-accent2);
    border-bottom-color: var(--color-accent2);
  }

  .page-header--accent3 .page-title {
    color: var(--color-accent3);
    border-bottom-color: var(--color-accent3);
  }

  .page-header--secondary .page-title {
    color: var(--color-secondary);
    border-bottom-color: var(--color-secondary);
  }
</style>