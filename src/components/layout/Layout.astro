---
import { clientConfig } from '../../../client.config.js';
import '../../styles/base.css';
import '../../styles/typography.css';
import '../../utils/Glassmorphic.css';
import '../../styles/DarkTheme/dark-theme-generator-colors.css';
import '../../styles/DarkTheme/dark-mode-mapping.css';
import '../../styles/accessibility/fonts.css';
import { SkipLink, DarkMode } from 'accessible-astro-components';

export interface Props {
  title?: string;
  description?: string;
}

const { title = clientConfig.seo.title, description = clientConfig.seo.description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={clientConfig.seo.keywords} />
    <meta name="author" content={clientConfig.seo.author} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={clientConfig.brand.favicon} />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&family=Poppins:wght@300;400;500;600;700&family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={clientConfig.seo.ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={clientConfig.seo.ogImage} />

    <title>{title}</title>

    <!-- Brand Variables from client.config.js -->
    <style define:vars={{
      // Brand colors from client config
      'brand-primary': clientConfig.colors.primary,
      'brand-secondary': clientConfig.colors.secondary,
      'brand-background': clientConfig.colors.background,
      'brand-accent1': clientConfig.colors.accent1,
      'brand-accent2': clientConfig.colors.accent2,
      'brand-accent3': clientConfig.colors.accent3,
      'brand-text': clientConfig.colors.text,
      'brand-text-light': clientConfig.colors.textLight,
      'brand-text-muted': clientConfig.colors.textMuted,
      // Typography from client config
      'font-body': clientConfig.typography.bodyFont,
      'font-header': clientConfig.typography.headerFont,
      'font-mono': clientConfig.typography.monoFont,
    }}>
      :root {
        /* Override brand tokens with client.config.js values */
        --brand-primary: var(--brand-primary);
        --brand-secondary: var(--brand-secondary);
        --brand-background: var(--brand-background);
        --brand-accent1: var(--brand-accent1);
        --brand-accent2: var(--brand-accent2);
        --brand-accent3: var(--brand-accent3);
        --brand-text: var(--brand-text);
        --brand-text-light: var(--brand-text-light);
        --brand-text-muted: var(--brand-text-muted);

        /* Override font families with client.config.js values */
        --font-body: var(--font-body);
        --font-header: var(--font-header);
        --font-mono: var(--font-mono);
      }
    </style>
  </head>
  <body>
    <style>
      /* Accessibility controls styling */
      .accessibility-controls {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: var(--z-fixed);
        display: flex;
        gap: 0.5rem;
      }

      /* Ensure main content has proper skip link target */
      #main-content:focus {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }
    </style>
    <!-- Skip Link for accessibility -->
    <SkipLink />

    <!-- Accessibility controls -->
    <div class="accessibility-controls">
      <DarkMode />
    </div>

    <!-- Main content -->
    <main id="main-content">
      <slot />
    </main>

  </body>
</html>