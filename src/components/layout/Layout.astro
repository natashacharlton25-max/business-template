---
// Adjust the import path if necessary to match the actual location of client.config.js
// Adjust the import path below if your client.config.js is in a different location
import { clientConfig } from '../../../client.config.js';
// If the file is not in ../../../client.config.js, update the path accordingly, for example:
// import { clientConfig } from '../../client.config.js';
// import { clientConfig } from '../../../config/client.config.js';

export interface Props {
  title?: string;
  description?: string;
}

const { title = clientConfig.seo.title, description = clientConfig.seo.description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={clientConfig.brand.favicon} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- CSS Variables from client config -->
    <style define:vars={{
      'client-primary': clientConfig.colors.primary,
      'client-secondary': clientConfig.colors.secondary,
      'client-background': clientConfig.colors.background,
      'client-accent': clientConfig.colors.accent,
    }}>
      :root {
        --color-primary: var(--client-primary);
        --color-secondary: var(--client-secondary);
        --color-background: var(--client-background);
        --color-accent: var(--client-accent);
      }
    </style>
  </head>
  <body>
    <!-- Header/Navigation will go here -->
    <header id="header">
      <nav class="container">
        <div class="nav-wrapper">
          <div class="nav-brand">
            <a href="/">
              <img src={clientConfig.brand.logo} alt={clientConfig.brand.name} class="logo" />
              <span class="brand-name">{clientConfig.brand.name}</span>
            </a>
          </div>
          <div class="nav-links">
  <a href="/">Home</a>
  <a href="/about">About</a>
  <a href="/services">Services</a>
  <a href="/projects">Projects</a>
  <a href="/insights">Insights</a>
  <a href="/assets">Assets</a>
  <a href="/search">Search</a>
  <a href="/contact">Contact</a>
</div>
        </div>
      </nav>
    </header>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer id="footer" class="section">
      <div class="container">
        <div class="footer-content grid grid-3">
          <div class="footer-brand">
            <h4>{clientConfig.brand.name}</h4>
            <p>{clientConfig.brand.tagline}</p>
            <div class="footer-contact">
              <p>{clientConfig.contact.email}</p>
              <p>{clientConfig.contact.phone}</p>
            </div>
          </div>
          
          <div class="footer-links">
            <h5>Quick Links</h5>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/services">Services</a></li>
              <li><a href="/projects">Projects</a></li>
            </ul>
          </div>
          
          <div class="footer-contact">
            <h5>Get In Touch</h5>
            <p>{clientConfig.contact.address}</p>
            <div class="social-links">
              {clientConfig.contact.social.linkedin && (
                <a href={clientConfig.contact.social.linkedin}>LinkedIn</a>
              )}
              {clientConfig.contact.social.twitter && (
                <a href={clientConfig.contact.social.twitter}>Twitter</a>
              )}
            </div>
          </div>
        </div>
        
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} {clientConfig.brand.name}. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Header styles */
  header {
    position: sticky;
    top: 0;
    background: var(--color-white);
    box-shadow: var(--shadow-sm);
    z-index: 100;
  }
  
  .nav-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
  }
  
  .nav-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .nav-brand a {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--color-secondary);
  }
  
  .logo {
    height: 40px;
    width: auto;
  }
  
  .brand-name {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-secondary);
  }
  
  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }
  
  .nav-links a {
    font-weight: 500;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .nav-links a:hover {
    color: var(--color-primary);
  }
  
  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width var(--transition-fast);
  }
  
  .nav-links a:hover::after {
    width: 100%;
  }
  
  /* Footer styles */
  footer {
    background: var(--color-secondary);
    color: var(--color-white);
    margin-top: auto;
  }
  
  .footer-content {
    margin-bottom: 2rem;
  }
  
  .footer-brand h4 {
    color: var(--color-white);
    margin-bottom: 1rem;
  }
  
  .footer-brand p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1rem;
  }
  
  .footer-links h5,
  .footer-contact h5 {
    color: var(--color-white);
    margin-bottom: 1rem;
    font-size: var(--font-size-lg);
  }
  
  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a,
  .footer-contact a {
    color: rgba(255, 255, 255, 0.8);
    transition: color var(--transition-fast);
  }
  
  .footer-links a:hover,
  .footer-contact a:hover {
    color: var(--color-primary);
  }
  
  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .nav-wrapper {
      flex-direction: column;
      gap: 1rem;
    }
    
    .nav-links {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    
    .social-links {
      justify-content: center;
    }
  }
</style>