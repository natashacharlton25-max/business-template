---
// LinkButton.astro - Reusable neumorphic link button
export interface Props {
  text: string;
  href?: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
  className?: string;
  variant?: 'primary' | 'secondary';
  size?: 'small' | 'medium' | 'large';
  onClick?: string;
}

const {
  text,
  href = "#",
  target = "_self",
  className = "",
  variant = "primary",
  size = "medium",
  onClick
} = Astro.props;

const buttonClass = `link-button link-button--${variant} link-button--${size} ${className}`;
---

{href !== "#" ? (
  <a href={href} target={target} class={buttonClass}>
    {text}
  </a>
) : (
  <button
    class={buttonClass}
    type="button"
    onclick={onClick}
  >
    {text}
  </button>
)}

<style>
  .link-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    outline: none;
    font-family: var(--font-body);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    text-decoration: none;
    letter-spacing: 2px;
    border-radius: 30px;
    border-top: 1px solid rgba(255,255,255,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.1);
    transition: all var(--transition-slow);

    /* Neumorphic shadow effect */
    box-shadow:
      4px 4px 6px rgba(0,0,0,0.2),
      -4px -4px 6px rgba(255,255,255,0.7),
      inset 4px 4px 6px rgba(0,0,0,0.4),
      inset -4px -4px 6px rgba(255,255,255,0.2);
  }

  /* Primary variant - Using theme tokens */
  .link-button--primary {
    background: var(--theme-primary);
    color: var(--color-white);
    border: 2px solid var(--theme-primary);
  }

  .link-button--primary:hover {
    background: var(--theme-primary-hover);
    color: var(--color-white);
    border-color: var(--theme-primary-hover);
    letter-spacing: 4px;
  }

  .link-button--primary:active {
    background: var(--clr-primary-a0);
    color: var(--color-white);
    border-color: var(--clr-primary-a0);
    letter-spacing: 1px;
    box-shadow:
      inset 4px 4px 6px rgba(0,0,0,0.2),
      inset -4px -4px 6px rgba(255,255,255,0.7);
  }

  /* Secondary variant - Using theme tokens */
  .link-button--secondary {
    background: transparent;
    color: var(--theme-primary);
    border: 2px solid var(--theme-primary);
  }

  .link-button--secondary:hover {
    background: var(--theme-primary);
    color: var(--color-white);
    border-color: var(--theme-primary);
    letter-spacing: 4px;
  }

  .link-button--secondary:active {
    background: var(--clr-primary-a0);
    color: var(--color-white);
    border-color: var(--clr-primary-a0);
    letter-spacing: 1px;
    box-shadow:
      inset 4px 4px 6px rgba(0,0,0,0.2),
      inset -4px -4px 6px rgba(255,255,255,0.7);
  }

  /* Size variants - Fixed width to prevent layout jumping */
  .link-button--small {
    padding: 0 1.5em;
    height: 40px;
    font-size: var(--font-size-sm);
    letter-spacing: 1px;
    min-width: 120px; /* Prevent jumping */
  }

  .link-button--small:hover {
    letter-spacing: 2px;
  }

  .link-button--medium {
    padding: 0 2em;
    height: 50px;
    font-size: var(--font-size-lg);
    min-width: 160px; /* Prevent jumping */
  }

  .link-button--medium:hover {
    letter-spacing: 4px;
  }

  .link-button--large {
    padding: 0 2.5em;
    height: 60px;
    font-size: var(--font-size-xl);
    letter-spacing: 3px;
    min-width: 200px; /* Prevent jumping */
  }

  .link-button--large:hover {
    letter-spacing: 5px;
  }

  /* Focus states for accessibility */
  .link-button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .link-button {
      width: 100%;
      max-width: 300px;
    }

    .link-button--small {
      height: 36px;
      font-size: var(--font-size-sm);
    }

    .link-button--medium {
      height: 44px;
      font-size: var(--font-size-base);
      padding: 0 1.5em;
    }

    .link-button--large {
      height: 52px;
      font-size: var(--font-size-lg);
      padding: 0 2em;
      letter-spacing: 2px;
    }

    .link-button--large:hover {
      letter-spacing: 3px;
    }
  }
</style>