---
import Layout from '../components/layout/Layout.astro';
import LinkButton from '../components/ui/buttons/LinkButton.astro';
import { Button, Card, Notification } from 'accessible-astro-components';
---

<Layout title="Home - Accessibility Test">
  <div class="container section">
    <h1>Accessibility & Component Test Page</h1>

    <div style="display: flex; flex-direction: column; gap: 3rem; max-width: 800px;">

      <!-- Accessibility Notice -->
      <Notification type="info">
        <p><strong>Accessibility Features Active:</strong> This page includes skip links, dark mode toggle (top-right), and keyboard navigation. Press Tab to navigate, Space/Enter to activate.</p>
      </Notification>

      <!-- Custom LinkButtons -->
      <section>
        <h2>Custom Neumorphic LinkButtons</h2>
        <div style="display: flex; gap: 1rem; flex-wrap: wrap; margin-top: 1rem;">
          <LinkButton text="Primary Small" variant="primary" size="small" href="/about" />
          <LinkButton text="Secondary Medium" variant="secondary" size="medium" href="/projects" />
          <LinkButton text="Primary Large" variant="primary" size="large" href="/insights" />
        </div>
      </section>

      <!-- Accessible Components -->
      <section>
        <h2>Accessible Astro Components</h2>
        <div style="display: flex; gap: 1rem; flex-wrap: wrap; margin-top: 1rem;">
          <Button>Accessible Button</Button>
          <Button variant="secondary">Secondary Button</Button>
          <Button variant="outline">Outline Button</Button>
        </div>
      </section>

      <!-- Card Examples -->
      <section>
        <h2>Card Components</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-top: 1rem;">
          <Card>
            <h3>Accessible Card</h3>
            <p>This card uses the accessible-astro-components library with proper ARIA attributes and keyboard navigation.</p>
            <Button>Learn More</Button>
          </Card>

          <Card>
            <h3>Dark Mode Ready</h3>
            <p>All components automatically adapt to dark mode. Try the toggle in the top-right corner!</p>
            <Button variant="secondary">Try Dark Mode</Button>
          </Card>
        </div>
      </section>

      <!-- Instructions -->
      <section>
        <h2>Accessibility Instructions</h2>
        <ul style="line-height: 1.8;">
          <li><strong>Keyboard:</strong> Use Tab/Shift+Tab to navigate, Space/Enter to activate</li>
          <li><strong>Skip Links:</strong> Press Tab on page load to access skip navigation</li>
          <li><strong>Dark Mode:</strong> Toggle in top-right respects system preferences</li>
          <li><strong>Screen Readers:</strong> All components have proper ARIA labels</li>
          <li><strong>Focus:</strong> Clear focus indicators on all interactive elements</li>
        </ul>
      </section>
    </div>
  </div>
</Layout>